<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/my_book_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/my_book_title"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="题名： 	Android语法范例参考大全"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_bar_code"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="条码号： 01011013226804"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_call_no"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="索书号： TN929.53-39/14"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_local"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="馆藏地点： 自科图书阅览室"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_type"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="图书类型： 中文图书"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_volume_info"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="卷册信息： 1"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_loan_date"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="借出日期： 2016-05-21"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_return_date"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="应还日期： 2016-07-21"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_book_renew_count"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="续借次数： 1"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/my_book_button_renew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_input_black_24dp"
            android:layout_alignBottom="@+id/my_book_layout"
            android:layout_alignEnd="@+id/my_book_layout"
            android:background="@color/transparent"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>